{
  "name": "board-game",
  "version": "0.2.2",
  "scripts": {
    "ng": "ng",
    "demo": "ng serve",
    "start": "ng build hex-board --watch",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build:prod": "npm run build:prod:hex-board && ng build --configuration production && npm run copy",
    "build:prod:hex-board": "ng build hex-board --configuration production",
    "publish:hex-board": "npm run build:prod:hex-board && (cd dist/hex-board && npm publish)",
    "copy": "rm -rf ./docs && mkdir ./docs && cp -r ./dist/board-game/browser/* ./docs",
    "preversion": "npm run build:prod && git add .",
    "postversion": "git push --follow-tags"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "honeycomb-grid": "^4.1.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "ng-packagr": "^21.0.0",
    "typescript": "^5.9.0"
  }
}
